{
    "name": "kwvanderlinde/php-diff",
    "description": "A comprehensive library for generating differences between two strings in multiple formats (unified, side by side HTML etc).",
    "type": "library",
    "license": "BSD-3-Clause",
    "authors": [
        {
          "name": "Kenneth VanderLinde",
          "email": "kwvanderlinde@gmail.com"
        },
        {
            "name": "Jack Cherng",
            "email": "jfcherng@gmail.com"
        },
        {
            "name": "Chris Boulton",
            "email": "chris.boulton@interspire.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Jfcherng\\Diff\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jfcherng\\Diff\\Test\\": "tests/"
        }
    },
    "require": {
        "php": "^7.0",
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.13",
        "phan/phan": "^1.0",
        "phpunit/phpunit": "^7.2"
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "analyze": [
            "phan --color"
        ],
        "fix": [
            "php-cs-fixer fix --verbose"
        ],
        "test": [
            "phpunit --verbose"
        ]
    }
}
